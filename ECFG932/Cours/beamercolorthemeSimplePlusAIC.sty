% ---- theme color
\usecolortheme[named=nyubluedarker]{structure}

% ---- title, author, institute colors
\setbeamercolor{titlelike}{parent=structure}
\setbeamercolor{author}{fg=nyubluedarker} 
\setbeamercolor{institute}{fg=nyubluedarker} 

% ---- standard block
\setbeamercolor{block title}{bg=nyupurple}
\setbeamercolor{block body}{bg=nyupurple!10}
\AtBeginEnvironment{block}{%
    \setbeamercolor{itemize item}{fg=nyupurple}
    \setbeamercolor{itemize subitem}{fg=nyupurple}
    \setbeamercolor{itemize subsubitem}{fg=nyupurple}
    \setbeamercolor{enumerate item}{fg=nyupurple}
    \setbeamercolor{enumerate subitem}{fg=nyupurple}
    \setbeamercolor{enumerate subsubitem}{fg=nyupurple}
}

% ---- example block
\setbeamercolor{block title example}{bg=nyublue}
\setbeamercolor{block body example}{bg=nyublue!10}
%\setbeamercolor{example text}{fg=nyublue}
\AtBeginEnvironment{exampleblock}{%
    \setbeamercolor{itemize item}{fg=nyublue}
    \setbeamercolor{itemize subitem}{fg=nyublue}
    \setbeamercolor{itemize subsubitem}{fg=nyublue}
    \setbeamercolor{enumerate item}{fg=nyublue}
    \setbeamercolor{enumerate subitem}{fg=nyublue}
    \setbeamercolor{enumerate subsubitem}{fg=nyublue}
}

% ---- alert block
\setbeamercolor{block title alerted}{bg=nyuorange}
\setbeamercolor{block body alerted}{bg=nyuorange!10}
%\setbeamercolor{alerted text}{fg=nyuorange}
\AtBeginEnvironment{alertblock}{%
    \setbeamercolor{itemize item}{fg=nyuorange}
